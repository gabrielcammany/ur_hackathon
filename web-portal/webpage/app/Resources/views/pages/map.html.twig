        a.map {
            color: white;
        }

        #containerBox {
            text-align: center;
        }

        #imageBox {
            background: url({{ asset('images/factory.svg') }}) no-repeat;
            vertical-align: middle;
            display: inline-block;
            background-position: center;
        }

        #area2 {
            position: absolute;
            width: 20%;
            height: 25%;
            bottom: 35%;
            right: 15%;
            cursor: pointer;
        }

        #area1 {
